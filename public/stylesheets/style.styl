html,
body
  font-family 'Roboto', 'Helvetica', sans-serif

strong,
b
  font-weight 700

h1,
h2,
h3
  font-family "Roboto Slab", "Helvetica", "Arial", sans-serif

code
  font-family "Roboto mono", monospace
  color rgb(255,82,82)
  background-color #f5f5f5
  padding 0 5px

pre
  code
    display block

.dragon-header
  .mdl-layout__header-row
    padding-left 40px

.mdl-layout-title
  font-family "Roboto Condensed", "Helvetica", "Arial", sans-serif
  text-transform uppercase
  font-size 24px
  a
    text-decoration none
    font-weight 300

.dragon-container
  max-width 1600px
  width calc(100% - 16px)
  margin 0 auto

.dragon-content
  border-radius 2px
  padding 50px 56px
  margin-bottom 50px
  max-width 1600px
  img
    max-width 100%
  p
    &.intro
      text-align center
      font-size 20px
  h3
    margin-top 48px

.dragon-home
  .dragon-content
    p
      text-align justify
    code
      text-align left

.dragon-layout
  &.is-small-screen
    .demo-content
      padding 40px 28px

.dragon-footer
  padding-left 40px

.dragon-main-admin
  footer
    position absolute
    bottom 0
    left 0
    right 0

.dragon-button-edit
  float right
  margin-right -6vh

.dragon-button-save
  position absolute
  bottom 7px
  right 7px

.dragon-expandable--wrapper
  display inline-block
  -webkit-transition-duration .2s
  transition-duration .2s
  -webkit-transition-timing-function cubic-bezier(.4,0,.2,1)
  transition-timing-function cubic-bezier(.4,0,.2,1)
  max-width .1px

.mdl-textfield--expandable
  .mdl-button--icon
    margin-bottom 16px

.mdl-textfield .mdl-textfield__input, .mdl-textfield .mdl-textfield__label
  margin-left 5px

.ghostdown-panel
  margin-top 62px

